= form_for(@data_type) do |f|
  - if @data_type.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@data_type.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @data_type.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :si_unit
    %br
    = f.text_field :si_unit
  .field
    = f.label :description
    %br
    = f.text_area :description

  .actions
    = f.submit
