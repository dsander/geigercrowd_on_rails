= form_for(@instrument) do |f|
  - if @instrument.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@instrument.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @instrument.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :model, t('.model')
    %br
    = f.text_field :model, size: 50;
  .field
    = f.label :data_type_id, t('.si_unit')
    %br
    = f.select :data_type_id, data_type_options(@data_types)
    %br
  .field
    = f.label :deadtime, t('.deadtime')
    %br
    = f.text_field :deadtime, size: 7;
  .field
    = f.label :error, t('.error')
    %br
    = f.text_field :error, size: 7;
  .field
    = f.label :notes, t('.notes')
    %br
    = f.text_area :notes, size: "70x30"
  .field
    = f.label :location_id, t('.location')
    %br
    = f.select :location_id, location_options(@locations)

  .actions
    = f.submit
