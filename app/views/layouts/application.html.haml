!!! XML
!!!
%html
  %head
    %title Geigercrowd
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #head
      .container
        #navigation
          %ul
            %li= link_to t('samples.title'), samples_path
            %li= link_to t('instruments.title'), instruments_path
            - if current_user.try(:admin?)
              %li= link_to "Data types", data_types_path

    #message
      - if alert
        .alert= alert
      - elsif notice
        .notice= notice
    #content
      = yield
